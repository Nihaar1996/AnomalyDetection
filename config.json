{
    "name": "test",
    "n_gpu": 0,
    "arch": {
        "type": "VAE",
        "args": {
            "encoder_sizes": [
                300
            ],
            "decoder_sizes": [
                300
            ],
            "z_size": 100,
            "batch_norm": true,
            "dropout": 0.2
        }
    },
    "data_loader": {
        "type": "AnomDataLoader",
        "args": {
            "data_dir": "data/",
            "batch_size": 1000,
            "shuffle": true,
            "num_workers": 1,
            "dataset": "kdd"
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "vae_loss",
    "metrics": [],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 10,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    }
}
